# Definition for a binary tree node.
# class TreeNode:
#     def __init__(self, x):
#         self.val = x
#         self.left = None
#         self.right = None

class Solution:
    def lowestCommonAncestor(self, root: 'TreeNode', p: 'TreeNode', q: 'TreeNode') -> 'TreeNode':
        # Base Case
        if not root or root == p or root == q:
            return root
        
        # explore left and right subtrees
        left = self.lowestCommonAncestor(root.left, p, q) # if this is null-> neither p nor q on the   left subtree
        right = self.lowestCommonAncestor(root.right, p, q) # if this is null-> neither p nor q on the right subtree
        
        # If both found â†’ root is LCA
        if left and right:
            return root
        
        # Else return the non-null child
        return left if left else right

        